<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherUpdatesRhouma" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="details_medium_semibold">
        <item name="android:textColor">@color/steel_blue</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:freezesText">true</item>
    </style>

    <style name="details_large_extrabold">
        <item name="android:textColor">@color/midnight_blue</item>
        <item name="android:fontFamily">@font/montserrat_extrabold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:freezesText">true</item>
    </style>

</resources>